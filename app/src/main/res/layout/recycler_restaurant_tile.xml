<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="restaurant"
            type="com.rishi.nomnom.model.Restaurant"/>
    </data>
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                app:photo="@{restaurant.photoList}" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/img_profile">
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginStart="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="0dp"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:text="@{restaurant.name}"/>
                <TextView
                    android:id="@+id/txt_open_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name"
                    android:maxLines="1"
                    android:layout_marginStart="8dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/colorOpenNow"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:open_now="@{restaurant.openHours}"/>

                <TextView
                    android:id="@+id/txt_vicinity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_open_now"
                    android:maxLines="2"
                    android:layout_marginStart="8dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text='@{restaurant.vicinity + ""}'/>

                <TextView
                    android:id="@+id/txt_rating"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/txt_vicinity"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:maxLines="1"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@color/colorRating"
                    android:text='@{restaurant.ratings + ""}'/>

                <TextView
                    android:id="@+id/txt_price_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_vicinity"
                    android:maxLines="1"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    app:price_level="@{restaurant.priceLevel}"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>